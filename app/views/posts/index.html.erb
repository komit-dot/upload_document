<h1>Posts</h1>
<div class="container">            
  <table class="table" border="3" width="100%">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Image</th>
        <th>Tags</th>
        <th>Tag Links</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
<% @posts.each do |post| %>
      <%= render partial: post, locals: {sharing: false} %>
<% end %>
    </tbody>
  </table>
</div>
<table>
 <div class="tags-cloud glassy-bg">
  <h4>Tags Cloud</h4>
  <% tag_cloud Tag.counts, %w{css1 css2 css3 css4} do |tag, css_class| %>
    <%= link_to tag.name, tag_path(tag.name), class: css_class %>
  <% end %>
</div>
<div class="row">
  <div class="large-8 columns">
    <%= render partial: "posts/new" %>
  </div>
</div>